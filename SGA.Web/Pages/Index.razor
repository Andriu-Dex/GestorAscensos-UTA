@page "/"
@attribute [Authorize]
@inject AuthService AuthService
@inject NavigationManager NavigationManager
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Bienvenido al Sistema de Gestión de Ascensos</h3>
                </div>
                <div class="card-body">
                    @if (userInfo != null)
                    {
                        <h4>Hola, @userInfo.Nombres @userInfo.Apellidos</h4>
                        <p>Nivel actual: Titular @userInfo.NivelActual</p>
                        <p>Fecha de ingreso al nivel actual: @userInfo.FechaIngresoNivelActual.ToString("dd/MM/yyyy")</p>
                        
                        <div class="mt-4">
                            <h5>Indicadores clave para ascenso:</h5>
                            <div class="row mt-3">
                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <div class="card-body text-center">
                                            <h6>Tiempo en rol actual</h6>
                                            <p class="fs-4">0 años</p>
                                            <button class="btn btn-sm btn-outline-primary">Importar</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <div class="card-body text-center">
                                            <h6>Obras académicas</h6>
                                            <p class="fs-4">0</p>
                                            <button class="btn btn-sm btn-outline-primary">Importar</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <div class="card-body text-center">
                                            <h6>Evaluación docente</h6>
                                            <p class="fs-4">0%</p>
                                            <button class="btn btn-sm btn-outline-primary">Importar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <div class="card-body text-center">
                                            <h6>Horas de capacitación</h6>
                                            <p class="fs-4">0 horas</p>
                                            <button class="btn btn-sm btn-outline-primary">Importar</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <div class="card-body text-center">
                                            <h6>Tiempo en investigación</h6>
                                            <p class="fs-4">0 meses</p>
                                            <button class="btn btn-sm btn-outline-primary">Importar</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <div class="card-body text-center">
                                            <h6>Estado de solicitud</h6>
                                            <p class="fs-4">Sin solicitud</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 mt-4">
                            <button class="btn btn-primary" @onclick="HandleLogout">Cerrar Sesión</button>
                        </div>
                    }
                    else
                    {
                        <p>Cargando información del usuario...</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private UserInfoModel? userInfo;
    
    protected override async Task OnInitializedAsync()
    {
        try
        {
            userInfo = await AuthService.GetUserInfo();
        }
        catch (Exception)
        {
            // Si hay un error al obtener la información del usuario, 
            // es posible que el token haya expirado
            await HandleLogout();
        }
    }
    
    private async Task HandleLogout()
    {
        await AuthService.Logout();
        NavigationManager.NavigateTo("/login");
    }
}
