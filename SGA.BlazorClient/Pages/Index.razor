@page "/"
@namespace SGA.BlazorClient.Pages
@using SGA.BlazorClient.Shared
@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        <div class="container mt-4">
            <div class="row align-items-center mb-5">
                <div class="col-md-6">
                    <h1 class="display-4 text-institutional">Sistema de Gestión de Ascensos</h1>
                    <p class="lead">Bienvenido al sistema de gestión y control de ascensos para profesores de la Universidad Técnica de Ambato.</p>
                    <hr class="my-4 border-institutional">
                    <p>Este sistema permite validar requisitos, administrar documentación, procesar solicitudes y generar reportes de manera segura, eficiente y centralizada.</p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <a href="teachers" class="btn btn-primary btn-lg px-4 me-md-2">
                            <i class="bi bi-people-fill me-2"></i> Ver Docentes
                        </a>
                        <a href="promotion-requests" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-arrow-up-circle me-2"></i> Solicitudes
                        </a>
                    </div>
                </div>
                <div class="col-md-6 text-center">
                    <img src="images/uta-logo.png" alt="UTA Logo" class="img-fluid" style="max-height: 300px;" />
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="container mt-4">
            <div class="row align-items-center mb-5">
                <div class="col-md-6">
                    <h1 class="display-4 text-institutional">Sistema de Gestión de Ascensos</h1>
                    <p class="lead">Bienvenido al sistema de gestión y control de ascensos para profesores de la Universidad Técnica de Ambato.</p>
                    <hr class="my-4 border-institutional">
                    <p>Este sistema permite validar requisitos, administrar documentación, procesar solicitudes y generar reportes de manera segura, eficiente y centralizada.</p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <a href="login" class="btn btn-primary btn-lg px-4 me-md-2">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión
                        </a>
                    </div>
                </div>
                <div class="col-md-6 text-center">
                    <img src="images/uta-logo.png" alt="UTA Logo" class="img-fluid" style="max-height: 300px;" />
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>
